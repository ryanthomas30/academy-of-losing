{
	"name": "academy-of-losing-server",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "yarn build && yarn serve",
		"serve": "cross-env NODE_ENV=production node dist/index.js",
		"serve:dev": "cross-env NODE_ENV=development yarn serve",
		"serve:production": "cross-env NODE_ENV=production yarn serve",
		"dev": "yarn build && concurrently \"tsc --watch\" \"cross-env NODE_ENV=development nodemon\" \"yarn generate:watch\" -n tsc,nodemon,graphql-codegen -c cyan,green,magenta",
		"predev": "yarn generate",
		"build": "tsc --project tsconfig.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.ts",
		"generate": "graphql-codegen",
		"generate:watch": "graphql-codegen --watch",
		"seed:config": "echo ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
		"seed:run": "echo ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
		"push-container": "gcloud builds submit --tag us-central1-docker.pkg.dev/academy-of-losing/academy-of-losing-docker-repo/academy-of-losing-server"
	},
	"dependencies": {
		"@graphql-tools/load": "^7.5.1",
		"@graphql-tools/schema": "^8.3.1",
		"@graphql-tools/utils": "^8.6.1",
		"apollo-datasource": "^3.3.1",
		"apollo-server": "^3.6.3",
		"cross-env": "^7.0.3",
		"dotenv-flow": "^3.2.0",
		"firebase-admin": "^10.0.2",
		"graphql": "^16.3.0",
		"module-alias": "^2.2.2",
		"moment": "^2.29.1",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.42",
		"typescript": "^4.5.5"
	},
	"devDependencies": {
		"@graphql-codegen/add": "^3.1.1",
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/typescript": "^2.4.4",
		"@graphql-codegen/typescript-resolvers": "^2.5.1",
		"@graphql-eslint/eslint-plugin": "^3.8.0",
		"@types/dotenv-flow": "^3.2.0",
		"@types/eslint": "^8.4.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^17.0.18",
		"@types/pg": "^8.6.4",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"apollo": "^2.33.9",
		"apollo-server-testing": "^2.25.3",
		"concurrently": "^7.0.0",
		"eslint": "^8.9.0",
		"eslint-plugin-import-newlines": "^1.2.1",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"ts-jest": "^27.1.3"
	},
	"_moduleAliases": {
		"@": "dist"
	}
}