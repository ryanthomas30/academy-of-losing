{
	"name": "academy-of-losing",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@apollo/client": "^3.5.8",
		"@craco/craco": "^6.4.3",
		"firebase": "^9.6.6",
		"graphql": "^16.3.0",
		"node-sass": "^7.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.2.1",
		"react-scripts": "5.0.0",
		"styled-components": "^5.3.3",
		"typescript": "^4.4.2",
		"web-vitals": "^2.1.0"
	},
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"test": "craco test",
		"eject": "craco eject",
		"lint": "eslint src/**/*.ts",
		"generate": "graphql-codegen",
		"generate:watch": "graphql-codegen --watch",
