		"@testing-library/user-event": "^13.2.1",
		"@types/craco__craco": "^6.4.0",
		"@types/jest": "^27.0.1",
		"@types/node": "^16.7.13",
		"@types/react": "^17.0.20",
		"@types/react-dom": "^17.0.9",
		"@types/react-router-dom": "^5.3.3",
		"@types/styled-components": "^5.1.22",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
